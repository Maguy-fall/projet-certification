{% extends 'base.html.twig' %}

{% block title %}Appartement{% endblock %}

{% block body %}
<div class="col-md-8 offset-sm-3 p-2">
   
    <a href="javascript:history.back()"><i class="fa fa-arrow-left" style="font-size:36px"></i></a>

    <h2>Mes Appartements</h2>

    <table class="table table-bordered table-sm text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appartement.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ appartement.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ appartement.prix }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ appartement.titre }}</td>
            </tr>
            <tr>
                <th>ImageFilename</th>
                <td>{{ appartement.imageFilename }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ appartement.surface }}</td>
            </tr>
            <tr>
                <th>Chambres</th>
                <td>{{ appartement.chambres }}</td>
            </tr>
            <tr>
                <th>Garage</th>
                <td>{{ appartement.garage }}</td>
            </tr>
            <tr>
                <th>Salle_de_bains</th>
                <td>{{ appartement.salleDeBains }}</td>
            </tr>
                        <tr>
                <th>Photos</th>
                <td>
                    {%for photo in appartement.photos %}
                        <img src="{{ asset('uploads/catalogue/' ~ photo.imagefilename) }}">
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('appartement_edit', {'id': appartement.id}) }}" button class="btn btn-success float-left">Voir</a>

    </br>
    </br>
    {{ include('appartement/_delete_form.html.twig') }}

    {% endif %}
</div>
{% endblock %}
