{% extends 'base.html.twig' %}

{% block title %}Terrain{% endblock %}

{% block body %}
<div class="col-md-8 offset-sm-3 p-2">
 
    <a href="javascript:history.back()"><i class="fa fa-arrow-left" style="font-size:36px"></i></a>
        
        <h2>Mes Terrains</h2>

        <table class="table table-bordered table-sm text-center">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ terrain.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ terrain.titre }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ terrain.description }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ terrain.prix }}</td>
                </tr>
                <tr>
                    <th>Surface</th>
                    <td>{{ terrain.surface }}</td>
                </tr>
                <tr>
                    <th>ImageFilename</th>
                    <td>{{ terrain.imageFilename }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('terrain_edit', {'id': terrain.id}) }}" class="btn btn-success float-left">Voir</a>

        {{ include('terrain/_delete_form.html.twig') }}
</div>
{% endblock %}
