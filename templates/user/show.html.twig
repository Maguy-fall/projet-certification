{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
   <div class="col-md-8 offset-sm-3 p-2">

    <a href="javascript:history.back()"><i class="fa fa-arrow-left" style="font-size:36px"></i></a>
    
    <h2>utilisateurs</h2>

    <table class="table table-bordered table-sm text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_edit', {'id': user.id}) }}" button class="btn btn-success float-left">Voir</a></br></br>

    {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
