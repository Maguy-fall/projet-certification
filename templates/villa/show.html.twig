{% extends 'base.html.twig' %}

{% block title %}Villa{% endblock %}

{% block body %}
    <div class="col-md-8 offset-sm-3 p-2">
      
        <a href="javascript:history.back()"><i class="fa fa-arrow-left" style="font-size:36px"></i></a>
        
        <h2>Villas</h2>

            <table class="table table-bordered table-sm text-center">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ villa.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ villa.titre }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ villa.description }}</td>
                    </tr>
                    <tr>
                        <th>Chambres</th>
                        <td>{{ villa.chambres }}</td>
                    </tr>
                    <tr>
                        <th>Garage</th>
                        <td>{{ villa.garage }}</td>
                    </tr>
                    <tr>
                        <th>Salle_de_bains</th>
                        <td>{{ villa.salleDeBains }}</td>
                    </tr>
                    <tr>
                        <th>ImageFilename</th>
                        <td>{{ villa.imageFilename }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ villa.prix }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('villa_edit', {'id': villa.id}) }}" button class="btn btn-success float-left">Voir</a>

            {{ include('villa/_delete_form.html.twig') }}
    </div>
{% endblock %}
